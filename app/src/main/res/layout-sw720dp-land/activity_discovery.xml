<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.tkstr.movies.app.DiscoveryActivity"
    android:baselineAligned="false">

    <fragment
        android:id="@+id/discovery_fragment"
        class="com.tkstr.movies.app.DiscoveryFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        tools:layout="@layout/fragment_discovery" />

    <fragment
        android:id="@+id/detail_fragment"
        class="com.tkstr.movies.app.DetailFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/fragment_detail" />

</LinearLayout>
