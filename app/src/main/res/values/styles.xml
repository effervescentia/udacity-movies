<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@android:color/holo_blue_dark</item>
    </style>

    <style name="detail_title_container">
        <item name="android:background">@android:color/holo_orange_dark</item>
        <item name="android:minHeight">200dp</item>
    </style>

    <style name="favorite_button">
        <item name="android:src">@drawable/ic_star</item>
        <item name="android:clickable">true</item>
        <item name="android:translationY">-28dp</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_gravity">bottom|right</item>
    </style>

</resources>
